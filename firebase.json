{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      { "source": "/main.html", "destination": "/main.html", "type": 200 },
      { "source": "/index.html", "destination": "/main.html", "type": 301 },
      { "source": "/", "destination": "/main.html", "type": 301 }
    ],
    "headers": [
      { "source": "**/*.html", "headers": [ { "key": "Cache-Control", "value": "no-cache" } ] },
      { "source": "**/*.@(css|js)", "headers": [ { "key": "Cache-Control", "value": "public, max-age=3600" } ] },
      { "source": "**/*.@(png|jpg|jpeg|gif|svg|webp)", "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ] }
    ]
  }
}


